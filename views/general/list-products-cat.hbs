{{#if isSearch}}
<h3 class="mb-3">"{{searchKey}}"</h3>
{{/if}}
<div class="row">
  {{#each products }}
  <div class="col-md-4 p-2 text-center">
    <div id="{{ProID}}" class="card mx-2 shadow card-home">
      <div class="text-center">
        <img src="/images/{{ProID}}/1.jpg" alt="" class="img-fluid card-img-custom" />
      </div>
      <div class="card-body">
        <h4>{{ PName }}</h4>
        <p>{{ CurrentPrice }} VND</p>
        <p>{{ EndDays }} Days
          <span class="countdown-clock" style="color: chocolate;">{{ EndFullTime}}</span>
          <span class="d-none end-time">{{ EndTime }}</span>
        </p>
        <p><strong>BidTime: </strong>{{ BidCount }} (pers)</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<div class="d-flex justify-content-center mt-5">
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      {{#if navs.prev}}
      <li class="page-item">
        <a class="page-link" href="?page={{navs.prev}}">Previous</a>
      </li>
      {{else}}
      <li class="page-item disabled">
        <a class="page-link" href="#">Previous</a>
      </li>
      {{/if}}
      {{#each pages }}
      {{!-- {{#if active}} --}}
      <li class="page-item {{#if active }} active {{/if}}" onclick="pagination({{value}})">
        <a class="page-link" href="#">
          {{value}}
        </a>
      </li>
      {{/each}}
      {{#if navs.next}}
      <li class="page-item">
        <a class="page-link" href="?page={{navs.next}}">Next</a>
      </li>
      {{else}}
      <li class="page-item disabled">
        <a class="page-link" href="#">Next</a>
      </li>
      {{/if}}
    </ul>
  </nav>
</div>