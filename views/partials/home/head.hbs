<!-- HEADER SECTION -->
<header class="mb-3 py-2 bg-primary" id="main-header">
  <div class="container text-white">
    {{#if home}}
    <h2><i class="fas fa-home" aria-hidden="true"></i> Home</h2>
    {{/if}}
    {{#if profile}}
    <h2><i class="fa fa-address-card" aria-hidden="true"></i> Profile</h2>
    {{/if}}
    {{#if watchList}}
    <h2><i class="fa fa-heart" aria-hidden="true"></i> List</h2>
    {{/if}}
    {{#if user.isAdmin}}
    <h2><i class="fas fa-toolbox"></i> Adminstrator</h2>
    {{/if}}
  </div>
</header>