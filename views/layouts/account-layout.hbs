  <script src="https://cdn.ckeditor.com/4.13.0/standard/ckeditor.js"></script>
  <script>
    // Replace textarea to editor CK
    CKEDITOR.replace("pdes");
    // Check Input Function:
    function checkInput(dom) {
      let check = true;
      for (let i = 0; i < dom.length; i++) {
        if (dom[i].value === "" && dom[i].type != "hidden") {
          check = false;
          break;
        }
      }
      return check;
    }
    // CheckBox:
    $("#autoAddTimeCheck").click(() => {
      if ($("#autoAddTimeCheck")[0].checked) {
        $("#autoAddTimeCheckLabel").after(`<div id="timeAdd" class="input-group">
          <input type="number" name="timeAdd" class="form-control" />
          <div class="input-group-append">
            <div class="input-group-text">
              min
            </div>
          </div>
        </div>`)
      } else {
        $("#timeAdd").remove();
      }

    })
    // Continue Button:
    $("#continue-button").click(() => {
      const inputDom = $('input');
      const check = checkInput(inputDom);
      if (check) {
        $("#infor-form").submit();
      } else {
        alert("Please fill all input infor before we continue!")
      }
    });
    $(".content").click(() => {
      if ($(event.target).attr("id") === "image-submit-button") {
        let inputDom = $('input');
        const check = checkInput(inputDom);
        if (check) {
          $('#image-form').submit();
        }
        else {
          alert("Please fill full 4 image!")
        }
      }
    });

    // Change Button:
    $("#btn-change").click(() => {
      $("#user-infor").remove();
      $("#form-edit-profile").removeClass("d-none");
    });

    // Change Pass Button:
    $("#btn-pass-edit").click(() => {
      $("#btn-pass-edit").after(`
      <!-- Password -->
          <div class="input-group">
            <div class="mb-2 input-group-item">
              <input type="password" name="new_password" placeholder="New Password..." class="form-control" />
              <small class="invalid-feedback">Password weark!</small>
            </div>
            <div class="mb-2 ml-auto input-group-item">
              <input type="password" name="confirmPass" placeholder="Confirm Password..." class="form-control" />
              <small class="invalid-feedback">not match!</small>
            </div>
          </div>`);
      $("#btn-pass-edit").remove();
    })

    /*  ==========================================
        SHOW UPLOADED IMAGE NAME
    * ========================================== */

    function imageNameUI(upload, uploadLabel) {
      var input = document.getElementById(upload);
      var infoArea = document.getElementById(uploadLabel);

      input.addEventListener('change', showFileName);
      function showFileName(event) {
        var input = event.srcElement;
        var fileName = input.files[0].name;
        infoArea.textContent = 'File name: ' + fileName;
      }
    }

    imageNameUI("upload-1", "upload-label-1");
    imageNameUI("upload-2", "upload-label-2");
    imageNameUI("upload-3", "upload-label-3");
    imageNameUI("upload-4", "upload-label-4");
  </script>

</body>

