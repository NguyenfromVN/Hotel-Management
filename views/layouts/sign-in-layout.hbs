    crossorigin="anonymous"></script>
  <script>
    $(document).ready(() => {
      $("#gender-select").change(() => {
        $('#gender-input').val(`${$(event.target).val()}`);
      });

      // Check Pass Word:
      $('#confirm-pass').change(() => {
        if ($("#password").val() != $("#confirm-pass").val()) {
          $("#confirm-pass").removeClass('is-valid');
          $("#confirm-pass").addClass('is-invalid');
        }
        else {
          $("#confirm-pass").removeClass('is-invalid');
          $("#confirm-pass").addClass('is-valid');
        }
      })

      // Check is-invalid:
      $('#register-button').click(() => {
        if ($('.is-invalid').val() != undefined)
          console.log('refill your info');
      })
    })
  </script>
</body>

