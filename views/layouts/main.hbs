  <script>
    // Replace textarea to editor CK
    CKEDITOR.replace("pdes");

    $(".top-5-slick").slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 2000
    });

    $(".slider-for").slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      fade: true,
      asNavFor: ".slider-nav"
    });
    $(".slider-nav").slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      asNavFor: ".slider-for",
      dots: true,
      centerMode: true,
      focusOnSelect: true
    });
    $("#edit-des-button").click(() => {
      $("#description-text-edit").removeClass("d-none");
      $("#edit-des-button").remove();
    });

    $(".content").click(() => {
      if ($(event.target).parents(".card").attr("class") != undefined && $(event.target).parents(".card").attr("class").indexOf("card-home") != -1) {
        const prodId = $(event.target).parents(".card").attr("id");
        window.location.assign(`/${prodId}/product-detail`);
      }
    });
    $("#sort-selected").change(() => {
      const sort = $("#sort-selected").val();
      let url = window.location.href;
      url = new URL(url);
      url.searchParams.set('sortBy', sort);
      window.location.assign(url);
    })
    // Pagination:
    function pagination(page) {
      let url = window.location.href;
      url = new URL(url);
      url.searchParams.set('page', page);
      window.location.assign(url);
    }

    // Time Countdowns:
    const endTime = $(".end-time");
    var endTimeObj = [];
    for (let i = 0; i < endTime.length; i++) {
      endTimeObj.push(new Date(endTime[i].innerHTML).getTime());
    }
    // Update the count down every 1 second
    var x = setInterval(() => {

      // Get today's date and time
      var now = new Date().getTime();

      // Get countDown Clock:
      const countDownTime = $(".countdown-clock");
      for (let i = 0; i < countDownTime.length; i++) {

        // Find the distance between now and the count down date
        var distance = endTimeObj[i] - now;
        // Time calculations for days, hours, minutes and seconds
        var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);
        // Output the result in an element with id="demo"
        countDownTime[i].innerHTML = hours + "h"
          + minutes + "m" + seconds + "s";

        // If the count down is over, write some text 
        if (distance < 0) {
          clearInterval(x);
        }
      }
    }, 1000);
  </script>
